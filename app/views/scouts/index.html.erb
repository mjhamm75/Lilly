<div class="container">
  <button type="button" class="btn btn-primary" id="add_new_scout">Add Scout</button>
  <table class="table table-striped" id="main_scout_list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
      </tr>
    </thead>
    <tbody>
      <% @scouts.each do |scout| %>
      <tr>
        <td><%= scout.full_name %></td>
        <td><%= scout.age %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>